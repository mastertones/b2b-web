flex(juc=center,ali=center,direction=row)
	display flex
	justify-content juc
	align-items ali
	flex-direction direction
	
pos(l=50%,t=l)
	position absolute
	left l
	top t

size(w=100%,h=w)
	width w
	height h

random(min,max)
	return floor(math(0, 'random')*(max - min + 1) + min)


fontStyle(fz=1.6rem)
	font-size fz
	line-height (fz * 2)
	text-indent (fz * 2)
	letter-spacing 4px

outlineSpace = 1.4rem

color_yellow = #e3ff7b
color_brown =#D4C8BE
